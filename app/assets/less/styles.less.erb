@import "elements.less";

/* BOOTSTRAP OVERRIDES */

.btn {
	.rounded(3px);
	font-family: 'Exo 2', sans-serif;
	text-transform: uppercase;
	font-weight: 200;
}

.btn-lg {
	padding-left: 50px;
	padding-right: 50px;		
	padding-top: 15px;
	padding-bottom: 15px;	
}

.btn-primary {
	background-color: #357EE8;

	&:hover {
		background-color: #357EE8;
		border-color: #357EE8;		
	}
}

/* SITE WIDE RULES */

body {	
	color: #333;
	font-family: 'Exo 2', sans-serif;
	font-weight: 200;
	line-height: 140%;
	font-size: 16px;
}

h1, h2, h3, h4, h5 {
	font-family: 'Exo 2', sans-serif;
	color: #555;	
}

.img-center {
	margin: 0 auto;
	display: block;
}

/* SITE SPECIFIC RULES */

.heading {
	color: #555;

	h2 {
		text-transform: uppercase;
		font-size: 28px;
		
		font-family: 'Exo 2', sans-serif;
		font-weight: 400;
		line-height: 140%;
		text-align: center;
		color: #357EE8;

		span {
			border-style: dashed;
			border-width: 3px;
			border-color: #ccc;
			.rounded(3px;);
			padding: 10px;
		}		
	}

	p {
		padding-top: 30px;
		color: #999;
		display: block;
		max-width: 590px;
		margin: 0 auto;
		font-size: 20px;
		line-height: 25px;

		font-family: 'Exo 2', sans-serif;
		text-align:  center;
		font-weight: 200;

	}

	padding-bottom: 90px;
}

/** Header Section */
.header-wrap {
	padding-top: 90px;
	padding-bottom: 90px;
	background: #150417 url('<%= image_url('manhattanskyline.jpg') %>') no-repeat center;	

	.head-container {

		h1 {
			text-transform: uppercase;
			font-size: 30px;
			color: #fff;
			font-family: 'Exo 2', sans-serif;
			font-weight: 200;
			line-height: 140%;
			text-align: center;
		}

		.logo-container {

			padding-bottom: 60px;

			.logo {
				margin: 0 auto;
				width: 128px;
				height: 128px;
				background-color: #fff;
				
				.rounded(50%);
			}
		}
	}

	.action {
		padding-top: 60px;
	}	
}

/** Services Section */
.services-wrap {
	padding-top: 90px;

	.services-container {
		.heading;

		.service {
			text-align: center;
			color: #555;
			padding-bottom: 60px;

			h3 {
				text-transform: uppercase;
				font-size: 22px;
				
				font-family: 'Exo 2', sans-serif;
				font-weight: 400;
				line-height: 140%;
				text-align: center;

				color: #357EE8;
			}

			span.micon {
				font-size: 120px;
			}

			p {
				font-size: 16px;
				color: #999;
			}
		}
	}
}

/** Works Section */
.portfolio-wrap {
	padding-top: 90px;
	background-color: #efefef;
	.heading;

	.items {
		padding-top: 90px;

		.item {
			margin-bottom: 60px;
			text-align: center;

			a {
				display: block;
				position: relative;
				margin: 0 auto;
				max-width: 400px;

			}

			h3 {
				text-align: center;
			}

			.overlay {
				position: absolute;
				top: 10px;
				left: 10px;
				right: 10px;
				bottom: 10px;
				background-color: #357EE8;
				background-color: rgba(50, 118, 177, 0.8);
				-moz-transition-duration: .4s;
				-o-transition-duration: .4s;
				-webkit-transition-duration: .4s;
				transition-duration: .4s;
				-moz-transform: rotateY(90deg);
				-ms-transform: rotateY(90deg);
				-o-transform: rotateY(90deg);
				-webkit-transform: rotateY(90deg);
				transform: rotateY(90deg);
				opacity: 0;
				border: 1px solid #357EE8;
				letter-spacing: 0;

				.overlay-icon {
				    margin-top: -25px;
				    margin-left: -25px;					
				    color: white;
				    position: absolute;
				    top: 50%;
				    left: 50%;
				    line-height: 48px;
				    width: 50px;
				    text-align: center;
				    border: 1px solid white;
				}
			}

			&:hover .overlay {
				-moz-transform: rotateY(0deg);
				-ms-transform: rotateY(0deg);
				-o-transform: rotateY(0deg);
				-webkit-transform: rotateY(0deg);
				transform: rotateY(0deg);
				opacity: 1;			
			}			
		}
	}

	.aboutus-link {
		padding-top: 60px;
	}	
}

/** About Us Section */
.aboutus-wrap {
	padding-top: 90px;
	.heading;

	.team {
		.member {
			padding-bottom: 60px;


			img {
				.rounded(50%);
				margin: 0 auto;

				max-width: 256px;
			}

			h3 {
				text-align: center;
			}

			.social {
				padding-top: 30px;
				text-align: center;

				a {
					margin-left: 6px;
					margin-right: 6px;
					img {
						display: inline;
						max-width: 48px;
						border: 4px solid #ccc;

						-webkit-transition: all .4s ease-in;
						-moz-transition: all .4s ease-in;
						-ms-transition: all .4s ease-in;
						-o-transition: all .4s ease-in;
						transition: all .4s ease-in;
					}					

					&:hover {
						img {
							border: 4px solid #357EE8;
						}
					}
				}


			}
		}


	}

}

/** Contact Section */
.contact-wrap {
	position: relative;
	overflow: hidden;
	background: #0F4065;

	.heading;

	.heading {
		h2 {
			color: #fff;
		}

		p {
			color: #fff;
		}
	}
	
	.social {
		padding-bottom: 60px;
		
		.icon {
			margin-left: 8px;
			margin-right: 8px;
		}
	}

	.copyright {
		p {
			font-size: 14px;
			color: #fff;
		}
	}

	.up {
		padding-top: 60px;

		a {
			display: block;
			width: 32px;
			height: 32px;
			margin: 0 auto;
			background-color: #fff;
			.rounded(50%);

			img {
				max-width: 100%;
			}
		}
	}

	#map {
		height: 1000px;
		width: 100%;
		position: absolute;
		z-index: 0;
	}

	.contact-container {
		padding-top: 90px;
		padding-bottom: 90px;
		position: relative;
		z-index: 100;
		background-color: rgba(0, 0, 0, 0.3);

		.phone, .email {
			font-weight: bold;
			font-size: 22px;
		}

		@media (max-width: 400px) {
			.email {
				font-size: 18px;
			}			
		}
	}
}

